@model Capstone.Web.Models.UserModel

@{
    ViewBag.Title = "Register";
}


<div id="Register">
    <h2>Register</h2>

    @using (Html.BeginForm("Register", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div>
            @Html.TextBoxFor(m => m.UserName, new { placeholder = "User Name" })
            @Html.ValidationMessageFor(m => m.UserName)
            @Html.ValidationMessage("username-exists")
        </div>

        <div>
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div>
            @Html.TextBoxFor(m => m.ConfirmEmail, new { placeholder = "Confirm Email" })
            @Html.ValidationMessageFor(m => m.ConfirmEmail)
        </div>

        <div>
            @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div>
            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>

        <button>Register</button>

    }
</div>


    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
