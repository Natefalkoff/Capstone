@model Capstone.Web.Models.ChangePasswordModel

@{
    ViewBag.Title = "ChangePassword";
}


<div class="container "  style="background-color:gainsboro">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Change Password</h2>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
            {  @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <br>
                <div class="body">
                    @Html.PasswordFor(m => m.TempPassword, new { placeholder = "Old Password" })
                    @Html.ValidationMessageFor(m => m.TempPassword, "", new { @class = "text-danger" })
                </div>
                <br>
                <div class="body">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "New Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <br>


                <div class="body">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password" })
                    <br />
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                        <br>

                        <div class="body">
                            <button>Change</button>
                        </div>
            }
        </div>
    </div>
</div>



