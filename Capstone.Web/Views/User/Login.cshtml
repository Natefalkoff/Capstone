@model Capstone.Web.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<div id="login" class="container" style="background-color:gainsboro">
    <h2>Login</h2>
    <section class="centeredPanel">
    <br>
    @using (Html.BeginForm("Login", "User", FormMethod.Post))
    {
        @Html.ValidationMessage("invalid-credentials")

        <div class="body panel-body">
            @Html.TextBoxFor(m => m.UserName, new { placeholder = "User Name" })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
        <br>
        <div class="body">
            @Html.PasswordFor(m => m.Password, new { placeholder = "password" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <br>
        <div class="body">
        <button>Login</button>
            </div>
    }
        </section>
</div>

