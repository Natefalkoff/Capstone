@model Capstone.Web.Models.DropDownPlans
@using System.Collections.Generic
@using Capstone.Web.Models

@{
    ViewBag.Title = "Index";
}



<br />
<br />
<br />

<h2>Plan Page</h2>





<div>
    <h2>View A Plan</h2>
    @using (Html.BeginForm("ViewPlanID", "Plan", FormMethod.Post))
    {

        List<SelectListItem> listItems = new List<SelectListItem>();
        foreach (PlanModel plan in Model.PlanModels)
        {
            listItems.Add(new SelectListItem
            {
                Text = plan.PlanName,
                Value = plan.PlanId.ToString()
            });
        }
        @Html.DropDownListFor(Model => Model.currentID, listItems)

        <button>View Plan</button>
    }

    @Html.ActionLink("| Create Plan |", "CreatePlan", "Plan")
    @Html.ActionLink("| Add A Meal |", "AddMealToPlan", "Plan")
</div>

