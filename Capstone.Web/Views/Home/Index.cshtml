        </th>
        <th class="body">
            Image

        </th>
        <th></th>
    </tr>
</table>
            <div class="container">
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3" style="background-color:gainsboro">

        <div>@Html.DisplayFor(modelItem => item.Name)</div>
            
        <div>
            <a href="@Url.Action("Details","Home", new { id = item.RecipeID })"><img style="width:100%; height:auto" src="~/Img/@item.ImageName" /></a>
            </div>
            <div>
            @Html.ActionLink("Details", "Details", new { id = item.RecipeID })
           </div>

            </div>

    }
</div>
